generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Product {
  id            Int          @id @default(autoincrement())
  title         String
  image         String
  price         Float
  order         Int
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  productTypeId Int
  ingredients   Ingredient[]
  type          ProductType  @relation(fields: [productTypeId], references: [id])

  @@map("products")
}

model ProductType {
  id       Int       @id @default(autoincrement())
  name     String    @unique
  products Product[]

  @@map("product_types")
}

model Ingredient {
  id        Int     @id @default(autoincrement())
  name      String
  quantity  Int
  productId Int
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@map("ingredients")
}
